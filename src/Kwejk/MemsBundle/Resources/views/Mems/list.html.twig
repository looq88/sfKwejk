{% extends "KwejkLayoutBundle::layout.html.twig" %}

{% block title %}Strona Główna{% endblock %}

{% block body %}
    
    <a href="{{ path('kwejk_mems_add') }}" class="btn btn-info">Dodaj mema</a>
    
    {% for mem in pages %}
        <div>
        <a href="{{path ('kwejk_mems_show', {'slug': mem.slug})}}">
            <p>{{ mem.title}}</p>
            <img src="{{asset('uploads/mems/'~ mem.imageName) }}"  alt="{{ mem.title }}">
        </a>
        </div>
    {%else%}
        
        <p>Brak Memów</p>
        
    {%endfor%} 
    
    {{ knp_pagination_render(pages) }}
    
{% endblock %}
